@{ 
    Layout = null;
}
@model SafeMode.Models.EditEmployeeViewModel
@using (Html.BeginForm("Edit", "Employee", FormMethod.Post, new {  }))
{
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-sm">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Update Employee Details</h4>
            </div>
            <div class="modal-body">
                <div class="row margin-15">
                    <div class="col-sm-4">
                        <label for="" class="control-label">First Name</label>
                    </div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row margin-15">
                    <div class="col-sm-4">
                        <label for="" class="control-label">Last Name</label>
                    </div>
                    <div class="col-sm-8 ">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>


                <div class="row margin-15 ">
                    <div class="col-sm-4">
                        <label for="input01" class="control-label">Team Name</label>
                    </div>
                    <div class="col-sm-8 ">
                        @Html.DropDownList("TeamID", null, "Select Team", new { @class = "form-control" })
                    </div>

                </div>
                <div class="row margin-15">
                    <div class="col-sm-4">

                        <label for="" class="control-label">Email</label>
                    </div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row margin-15">
                    <div class="col-sm-4">

                        <label for="" class="control-label"> Mobile No.</label>
                    </div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row margin-15">
                    <div class="col-sm-4">

                        <label for="" class="control-label">Office Ext.</label>
                    </div>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.OfficeExitNo, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row margin-15">
                    @Html.CheckBoxFor(m => m.IsSupervisor)
                    @*<input type="checkbox" id="chk_supervisior" runat="server" />*@
                    <label for="chk_supervisior" class="col-sm-4 control-label"> Is Supervisior.</label>
                </div>

                <div class="row margin-15">
                    @Html.CheckBoxFor(m => m.Active)
                    @*<input type="checkbox" id="chk_supervisior" runat="server" />*@
                    <label for="chk_isActive" class="col-sm-4 control-label"> Is Active</label>
                </div>
            </div>

            @Html.HiddenFor(m => m.ID)
            <div class="modal-footer">
                <div class="col-sm-6">
                    <input class="btn btn-primary" name="sendbut" value="Update" type="submit" @*onclick="validate()"*@ />
                </div>

            </div>

        </div>
    </div>
  
</div>
}

