
@model SafeMode.Models.RegisterViewModel

<asp:Content ID="Content2" ContentPlaceHolderID="ContentPlaceHolder1" Runat="Server">

    <!-- breadcrumbs -->
    <div class="breadcrumbs">
        <ol class="breadcrumb">
            <li><a href="~/Admin/Index"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="~/Employee/Index">Employee</a></li>
            <li class="active">Add Employee</li>
        </ol>
    </div>
    <!-- content main container -->
    <div class="main">
        <!-- row -->
        <div class="row">
            <!-- col 6 -->
            <div class="col-md-12">
                <!-- tile -->
                <section class="tile">

                    <!-- tile header -->
                    <div class="tile-header">
                        <h1> Add New Employee</h1>
                    </div>
                    <!-- /tile header -->
                    <!-- tile body -->
                    <div class="tile-body">

                        @using (Html.BeginForm("RegisterUser", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()


                            <div class="form-group col-md-12">
                                @Html.ValidationSummary(false, "", new { @class = "col-sm-6 text-danger" })
                                <label for="" class="col-sm-6 label-danger" id="lblInfo" style="display:none"> </label>
                            </div>

                            <div class="form-group col-md-6">
                                <label for="" class="col-sm-4 control-label"> First Name</label>
                                <div class="col-sm-8">
                                    @*<input type="text" id="txt_Fname" class="form-control" runat="server" />*@
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="" class="col-sm-4 control-label"> Last Name</label>
                                <div class="col-sm-8">
                                    @*<input type="text" id="txt_Lname" class="form-control" runat="server" />*@
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="" class="col-sm-4 control-label"> User Name</label>
                                <div class="col-sm-8">
                                    @*<input type="text" id="txt_userName" class="form-control" />*@
                                    @Html.TextBoxFor(m => m.UserName, null, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="" class="col-sm-4 control-label"> Password</label>
                                <div class="col-sm-8">
                                    @*<input type="password" id="txt_password" class="form-control" />*@
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="" class="col-sm-4 control-label"> Confirm Password</label>
                                <div class="col-sm-8">
                                    @*<input type="password" id="txt_ConfirmPassword" class="form-control" />*@
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="input01" class="col-sm-4 control-label">Current Team</label>

                                <div class="col-sm-8">
                                    @*<%--<select name="team_id" id="team_id" runat="server" required="required" class="form-control"></select>--%>*@
                                    @*<asp:DropDownList ID="team_id" runat="server" CssClass="form-control"></asp:DropDownList>*@
                                    @Html.DropDownList("TeamID", null, "Select Team", new { @class = "form-control" })

                                </div>


                            </div>
                            <div class="form-group col-md-6">
                                <label for="" class="col-sm-4 control-label"> Email</label>
                                <div class="col-sm-8">
                                    @*<input type="text" id="txt_Email" class="form-control" runat="server" />*@
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "txt_Email" })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="" class="col-sm-4 control-label"> Mobile No.</label>
                                <div class="col-sm-8">
                                    @*<input type="text" id="txt_cell" class="form-control" runat="server" />*@
                                    @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="" class="col-sm-4 control-label"> Office Ext.</label>
                                <div class="col-sm-8">
                                    @*<input type="text" id="txt_officeExt" class="form-control" runat="server" />*@
                                    @Html.TextBoxFor(m => m.OfficeExitNo, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group col-md-12">

                                <div class="col-sm-6">
                                    @Html.CheckBoxFor(m => m.IsSupervisor)
                                    @*<input type="checkbox" id="chk_supervisior" runat="server" />*@
                                    <label for="chk_supervisior" class="col-sm-4 control-label"> Is Supervisior.</label>
                                </div>
                                <div class="col-sm-6">
                                    @Html.CheckBoxFor(m => m.Active)
                                    @*<input type="checkbox" id="chk_IsActive" runat="server" />*@
                                    <label for="chk_isActive" class="col-sm-4 control-label"> Is Active</label>
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label for="input02" class="col-sm-4 control-label">Image</label>
                                <div class="col-sm-8">
                                    @*<asp:FileUpload ID="FileUpload1" runat="server" />*@
                                    @Html.TextBoxFor(x => x.Image,null, new { type = "file" })
                                </div>
                            </div>
                            <div class="clearfix"></div>

                            <div class="clearfix"></div>


                            <div class="form-group form-footer">
                                <div class="col-sm-offset-4 col-sm-8">
                                    <input class="btn btn-primary" name="act" value="signup" type="hidden" />
                                    <input class="btn btn-primary" name="sendbut" id="btn_save" value="Add/Update" type="submit" runat="server"  />
                                    <input class="btn btn-default" name="reset" value="Reset" type="reset" />
                                </div>
                            </div>


                        }



                    </div>
                    <!-- /tile body -->


                </section>
                <!-- /tile -->



            </div>
            <!-- /col 6 -->
        </div>
        <!-- /row -->
    </div>
    <!-- /content container -->
